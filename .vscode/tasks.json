{
    "version": "0.1.0",
    "command": "npm",
    "isShellCommand": true,
    "showOutput": "always",
    "suppressTaskName": true,
    "tasks": [
        {
            "taskName": "install",
            "args": ["install"]
        },
        {
            "taskName": "build",
            "args": ["run", "build"],
            "isBuildCommand": true
        },
        {
            "taskName": "unit-tests",
            "args": ["run", "test"],
            "isTestCommand": true
        },
        {
            "taskName": "unit-tests-coverage",
            "args": ["run", "cover"],
            "isTestCommand": false
        }
    ]
}